<Window x:Class="WpfProject.WindowForUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="450" Width="800">
    <Grid Background="#FFDADAF9">
        <TextBox x:Name="Id" Background="AliceBlue" Foreground="Black" materialDesign:HintAssist.Hint="Ведите Id" HorizontalAlignment="Left" Margin="95,87,0,0" VerticalAlignment="Top" Width="326" Height="30"/>
        <TextBox x:Name="Name" Background="AliceBlue" Foreground="Black" materialDesign:HintAssist.Hint="Ведите имя картинки" HorizontalAlignment="Left" Margin="95,149,0,0" VerticalAlignment="Top" Width="326" Height="30"/>
        <Button x:Name="LoadImage" Content="Загрузить картинку" Click="LoadImage_Click" HorizontalAlignment="Left" Margin="549,120,0,0" VerticalAlignment="Top"/>
        <Image Name="imgDynamic" Margin="487,192,28,28"/>
        <Button Content="Отправить" Click="SendData_Click" HorizontalAlignment="Left" Margin="211,338,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
